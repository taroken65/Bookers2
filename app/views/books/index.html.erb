<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
   <%= f.submit 'Create Book' %>
<% end %>

 <h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag('no_image.jpg') %></p>
  <p>Title：<%= book.title %></p>
  <p>説明：<%= book.opinion %></p>
  </div>
<% end %>