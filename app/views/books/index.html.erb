<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
   <%= f.submit 'Create Book' %>
<% end %>

 <h1>Books</h1>
 <table>
  <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  </tr>
 <% @books.each do |book| %>
  <tr>
  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.opinion %></td>
  </tr>
  <% end %>
  </table>