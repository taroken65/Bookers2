<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
   <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
<div
  <h2>Books</h2>
  <p><%= image_tag('no_image.jpg') %></p>
  <p>Title：<%= book.title %></p>
  <p>説明：<%= book.opinion %></p>
  </div>
<% end %>

<div class="post-body">
  <h2>Book detail</h2>
  <p><%= image_tag('no_image.jpg') %></p>
  <p><%= @book.user.name %></p>
  <p><%= @book.title %></p>
  <p><%= @book.opinion %></p>
  
 </div>