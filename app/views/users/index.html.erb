<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
   <%= f.submit 'Create Book' %>
<% end %>

 <h1>Users</h1>
 <table>
  <tr>
  <th>image</th>
  <th>name</th>
  <th></th>
  </tr>
 <% @users.each do |user| %>
  <tr>
  <td><%= image_tag('no_image.jpg') %></td>
  <td><%= user.name %></td>
  </tr>
  <% end %>
  </table>