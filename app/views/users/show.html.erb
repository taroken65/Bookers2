<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
   <%= f.submit 'Create Book' %>
<% end %>

<div class="post-body">
  <h2>Books</h2>
  <table>
  <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
  <td><%= image_tag('no_image.jpg') %></td>
  <td><%= book.user.name %></td>
  <td><%= book.title %></td>
  <td><%= book.opinion %></td>
  <% if book.user == current_user %>
  <td><%= link_to "Edit", edit_book_path(book) %></td>
  <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
  <% end %>
  <% end %>
  </tr>
  </table></div>